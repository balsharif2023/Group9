<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="310dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstNameLabel"
                style="@style/regFormLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/first_name_label"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/firstNameInput"
                style="@style/regFormInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/firstNameInvalidMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_invalid"
                android:visibility="gone" />

            <TextView
                android:id="@+id/firstNameEmptyMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter a First Name"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastNameLabel"
                style="@style/regFormLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/last_name_label"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/lastNameInput"
                style="@style/regFormInput"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/lastNameInvalidMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_invalid"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lastNameEmptyMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter a Last  Name"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameLabel"
                style="@style/regFormLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/username_label"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/userNameInput"
                style="@style/regFormInput"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/userNameInvalidMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_invalid_message"
                android:visibility="gone" />

            <TextView
                android:id="@+id/userNameEmptyMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter a UserName"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passwordExpand"
                style="@style/formLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="#009688"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/passwordWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/passwordLabel"
                    style="@style/regFormLabel"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/password_label"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/passwordInput"
                    style="@style/regFormInput"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="12"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/passwordInvalidMessage"
                    style="@style/formValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_invalid_message"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/passwordEmptyMessage"
                    style="@style/formValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter a Password"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/confirmPasswordWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/passwordConfirmLabel"
                    style="@style/regFormLabel"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/password_confirm_label"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/passwordConfirmInput"
                    style="@style/regFormInput"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="12"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/passwordConfirmInvalidMessage"
                    style="@style/formValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pass_confirm_invalid"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/passwordConfirmEmptyMessage"
                    style="@style/formValidation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter a Password"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailLabel"
                style="@style/regFormLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/email_label"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/emailInput"
                style="@style/regFormInput"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/emailInvalidMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_invalid_message"
                android:visibility="gone" />

            <TextView
                android:id="@+id/emailEmptyMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter an E-mail"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phoneNumberLabel"
                style="@style/regFormLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phone_number_label"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/phoneNumberInput"
                style="@style/regFormInput"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/phoneNumInvalidMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_num_invalid"
                android:visibility="gone" />

            <TextView
                android:id="@+id/phoneNumEmptyMessage"
                style="@style/formValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter a Phone Number"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


            <ImageView
                android:id="@+id/captureView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.camera.view.PreviewView
                android:id="@+id/faceView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/nextButton"
                style="@style/formButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="@string/next_button_label"
                android:visibility="gone" />

            <Button
                android:id="@+id/saveButton"
                style="@style/formButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="Save Changes"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>