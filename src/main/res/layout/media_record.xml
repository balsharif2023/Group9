<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/mediaRecordTemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/media_border"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/owl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/media_inner_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mediaRecordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:gravity="center"
            android:maxLines="1"
            android:text="TextView"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mediaRecordDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="2"
            android:padding="10sp"
            android:text="Description......"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>